<section class="gift-guide-grid">
  <h2 class="gift-guide-grid__title">Tisso vison in the wild</h2>
  <div class="gift-guide-grid__wrapper">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        {% comment %} <div class="gift-guide-grid__item" data-product-index="{{ forloop.index0 }}">
          <img src="{{ product.featured_image | img_url: '470x550' }}"
            alt="{{ product.title }}" class="gift-guide-grid__img" width="470" height="550">
          <span class="gift-guide-grid__plus" data-product-index="{{ forloop.index0 }}">+</span>
        </div> {% endcomment %}
        <div class="gift-guide-grid__item" data-handle="{{ product.handle }}" data-product-index="{{ forloop.index0 }}">
          <img src="{{ product.featured_image | img_url: width: 444, height: 433 }}" alt="{{ product.title }}" 
            class="gift-guide-grid__img"/>
          <span class="gift-guide-grid__plus" data-product-index="{{ forloop.index0 }}">+</span>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <!-- Popup -->
  <div id="gift-guide-popup" class="gift-guide-popup" style="display:none;">
    <div class="gift-guide-popup__content">
      <!-- Close Button -->
      <button class="gift-guide-popup__close" aria-label="Close popup">&times;</button>
    
      <!-- Dynamic container (JS will inject HTML here) -->
      <div id="gift-guide-popup-dynamic"></div>
    </div>
  </div>

</section>

{% schema %}
{
  "name": "Gift Guide Product Grid",
  "settings": [
    { "type": "text", "id": "grid_title", "label": "Section Title", "default": "Tisso vison in the wild" }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product", "label": "Select a product" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Gift Guide Product Grid",
      "blocks": [
        { "type": "product" }, { "type": "product" }, { "type": "product" },
        { "type": "product" }, { "type": "product" }, { "type": "product" }
      ]
    }
  ]
}
{% endschema %}