<section class="gift-guide-banner">
  <!-- Hero top image -->
  {% if section.settings.hero_image %}
    <img src="{{ section.settings.hero_image | img_url: '1440x390' }}" alt="Banner Hero" 
      class="gift-guide-banner__hero-img" width="1440"height="390"/>
  {% endif %}
  <!-- Split layout below the hero image -->
  <div class="gift-guide-banner__split">
    <div class="gift-guide-banner__text-side">
      <h1 class="gift-guide-banner__heading">{{ section.settings.heading }}</h1>
      <p class="gift-guide-banner__desc">{{ section.settings.desc }}</p>
      <a href="{{ section.settings.main_btn_link }}" class="gift-guide-banner__main-btn">
        {{ section.settings.main_btn_text }} <span class="arrow">â†’</span>
      </a>
    </div>
    <div class="gift-guide-banner__img-side">
      {% if section.settings.right_image %}
        <img src="{{ section.settings.hero_image2 | img_url: '890x404' }}" alt="Banner Side" 
          class="gift-guide-banner__img" width="890"height="404"/>
      {% endif %}
    </div>
  </div>
  <div class="gift-guide-banner__strip">
    {{ section.settings.strip_text }}
  </div>
</section>
{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    { "type": "image_picker", "id": "hero_image", "label": "Top Banner Image (1440x390)" },
    { "type": "text", "id": "heading", "label": "Banner Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "desc", "label": "Banner Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "main_btn_text", "label": "Main Button Text", "default": "SHOP NOW" },
    { "type": "url", "id": "main_btn_link", "label": "Main Button Link" },
    { "type": "image_picker", "id": "right_image", "label": "Right Side Banner Image (890x404)" },
    { "type": "text", "id": "strip_text", "label": "Strip Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [ { "name": "Gift Guide Banner" } ]
}
{% endschema %}