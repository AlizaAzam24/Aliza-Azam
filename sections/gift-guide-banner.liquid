{%- comment -%}
  Custom banner section for the Gift Guide.
  All text, buttons, and main image are editable via Shopify customizer.
  Animations for buttons are handled via CSS transitions.
{%- endcomment -%}
<section class="gift-guide-banner">
  <div class="gift-guide-banner__topbar">
    <span class="gift-guide-banner__logo">{{ section.settings.logo }}</span>
    <span class="gift-guide-banner__promo">{{ section.settings.promo }}</span>
    <a href="{{ section.settings.top_button_link }}" class="gift-guide-banner__top-btn">
      {{ section.settings.top_button_text }}
      <span class="arrow">→</span>
    </a>
  </div>
  <div class="gift-guide-banner__main" style="background-image:url({{ section.settings.bg | img_url: 'master' }});">
    <div class="gift-guide-banner__main-content">
      <h1 class="gift-guide-banner__title">{{ section.settings.heading }}</h1>
      <p class="gift-guide-banner__desc">{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.main_button_link }}" class="gift-guide-banner__main-btn">
        {{ section.settings.main_button_text }}
        <span class="arrow">→</span>
      </a>
    </div>
  </div>
  <div class="gift-guide-banner__bottombar">{{ section.settings.bottom_text }}</div>
</section>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    { "type": "text", "id": "logo", "label": "Logo/Brand (top left)", "default": "TISSO VISON" },
    { "type": "text", "id": "promo", "label": "Promo message (top center)", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "top_button_text", "label": "Top right button text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "top_button_link", "label": "Top right button link" },
    { "type": "image_picker", "id": "bg", "label": "Main illustration (background image)" },
    { "type": "text", "id": "heading", "label": "Main heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subheading", "label": "Subheading/description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "main_button_text", "label": "Main button text", "default": "SHOP NOW" },
    { "type": "url", "id": "main_button_link", "label": "Main button link" },
    { "type": "text", "id": "bottom_text", "label": "Bottom bar text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [ { "name": "Gift Guide Banner" } ]
}
{% endschema %}